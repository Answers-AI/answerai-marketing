{
  "name": "answersai-marketing",
  "version": "0.1.0",
  "main": "index.js",
  "author": "LastRev",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "algolia:update": "dotenv -- lr-algolia-updater https://starter.lastrev.com/.netlify/functions/algolia-background",
    "algolia:update:local": "dotenv -- lr-algolia-updater http://localhost:8888/.netlify/functions/algolia-background",
    "dev": "dotenv -- bash ./scripts/dev.sh",
    "build": "dotenv -- bash ./scripts/build.sh",
    "turbo:sync:cms": "dotenv -- turbo run sync:cms",
    "turbo:build": "dotenv -- turbo run build",
    "build:storybook": "dotenv -- turbo run build-storybook; status=$?; pm2 kill; exit $status",
    "clean": "dotenv -- lerna exec 'rm -rf dist/'",
    "deps:check": "dotenv -- echo \"-- depcheck for root --\"; depcheck . --specials=babel,eslint,prettier,webpack,bin,jest; for d in ./packages/*/ ; do (echo \"-- depcheck for $d --\"; depcheck \"$d\" --specials=babel,eslint,prettier,webpack,bin,jest); done;manypkg check",
    "deps:fix": "dotenv -- manypkg fix",
    "gql:dev": "dotenv -- turbo run dev --scope=*graphql-runner* --no-deps --include-dependencies",
    "gql:pm2:kill": "dotenv -- pm2 delete gql-serve",
    "gql:start": "dotenv -- turbo run start --scope=*graphql-runner*  --no-deps --include-dependencies && echo 'GQL server started, kill with `yarn gql:pm2:kill`'",
    "nuclear": "dotenv -- lerna exec 'rm -rf node_modules/ dist/'; rm -rf node_modules/; yarn install",
    "postinstall": "dotenv -- patch-package",
    "prettier": "dotenv -- prettier --write \"**/*.{js,ts,tsx,md,json}\"",
    "propagate:env": "dotenv -- node scripts/propagateEnv.js",
    "serve:site": "dotenv -- yarn workspace @answersai-marketing/web serve",
    "start": "dotenv -- turbo run start --output-logs=new-only",
    "storybook": "dotenv -- turbo run storybook",
    "sync:cms": "dotenv -- yarn workspace @answersai-marketing/graphql-runner sync:cms",
    "lint": "dotenv -- turbo run lint",
    "lint:prod": "dotenv -- cross-env NODE_ENV=production eslint ./package.json",
    "test": "dotenv -- turbo run test",
    "test:watch": "dotenv -- turbo run test:watch -- --passWithNoTests",
    "test:unit": "dotenv -- turbo run test -- --passWithNoTests",
    "test:e2e": "dotenv -- turbo run test:e2e",
    "version-packages": "dotenv -- changeset version && yarn prettier",
    "posttest": "dotenv -- yarn combine:reports",
    "combine:reports": "dotenv -- node scripts/combineCoverage.js"
  },
  "private": true,
  "resolutions": {
    "@types/react": "^17.0.37",
    "lodash-es": "^4.17.21",
    "lodash": "^4.17.21",
    "**/react": "^17.0.2",
    "**/react-dom": "^17.0.2",
    "@sentry/react": "^7.47.0",
    "@sentry/nextjs": "^7.47.0",
    "@mui/system": "5.5.1"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 version",
    "Firefox ESR",
    "not dead",
    "not IE 11"
  ],
  "dependencies": {
    "@eslint/eslintrc": "^1.0.5",
    "@last-rev/eslint-plugin-last-rev": "^0.1.1",
    "@manypkg/cli": "^0.19.1",
    "cross-env": "^7.0.2",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.4.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "^12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-utils": "^3.0.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "lerna": "^3.22.1",
    "netlify-cli": "^8.1.8",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "pm2": "^5.2.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "tslib": "^2.3.1",
    "turbo": "1.10.0",
    "typescript": "^4.7.4",
    "wait-on": "^5.3.0"
  },
  "packageManager": "yarn@1.22.17",
  "husky": {
    "hooks": {
      "pre-push": "yarn lint:prod"
    }
  }
}
